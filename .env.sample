# Database Configuration
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://user:password@localhost:5432/basecard"

# Application Configuration
PORT=3000

# Mock Data Configuration
# Set to "true" to use mock data, "false" otherwise
NEXT_PUBLIC_USE_MOCK_DATA="false"

# Pinata Configuration (IPFS)
# Get these from your Pinata dashboard
PINATA_JWT="your_pinata_jwt"
PINATA_GATEWAY="gateway.pinata.cloud"
PINATA_GROUP="your_pinata_group_id"

# AWS S3 Configuration
# Get these from your AWS console
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your_aws_access_key_id"
AWS_SECRET_ACCESS_KEY="your_aws_secret_access_key"
AWS_S3_BUCKET_NAME="your_s3_bucket_name"
