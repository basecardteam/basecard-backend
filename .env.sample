# Database Configuration
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://user:password@localhost:5432/basecard"

# Application Configuration
PORT=3000

# Mock Data Configuration
# Set to "true" to use mock data, "false" otherwise
NEXT_PUBLIC_USE_MOCK_DATA="false"

# Pinata Configuration (IPFS)
# Get these from your Pinata dashboard
PINATA_JWT="your_pinata_jwt"
PINATA_GATEWAY="gateway.pinata.cloud"
PINATA_GROUP="your_pinata_group_id"

# Supabase S3
SUPABASE_S3_REGION=
SUPABASE_S3_ENDPOINT=

# Blockchain Configuration
BASE_WS_RPC_URLS="wss://base-sepolia-rpc.publicnode.com,wss://base-sepolia.drpc.org"

# Deploy Webhook Configuration
# Secret token for deploy webhook authentication (generate with: openssl rand -hex 32)
DEPLOY_SECRET_TOKEN="your_deploy_secret_token"
# GitHub repository for GHCR image (format: username/repo-name)
GITHUB_REPOSITORY="jeongseup/basecard-backend"

# Development Configuration
# Dev JWT token for bypassing auth in development (any string works)
# Use: Authorization: Bearer dev-secret-token-12345
DEV_JWT_TOKEN="dev-secret-token-12345"
